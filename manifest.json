{
    "name": "Blurr.",
    "description": "Designed to protect your privacy by preventing others from accidentally or intentionally viewing your WhatsApp chats gallery.",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "base.html",
        "default_icon": "logo.png"
    },
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": [
                "https://*.whatsapp.com/*"
            ],
            "js": [
                "app.js"
            ]
        }
    ]
}